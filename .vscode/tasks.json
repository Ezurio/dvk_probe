{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "west build -b rpi_pico",
            "problemMatcher": [
                "$cmake",
                "$kconfig",
                "$kconfig_syntax",
                "$kconfig_syntax_files",
                "$dts",
                "$dts_syntax",
                "$gcc",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "command": "west build -p -b rpi_pico ${input:build_options}",
            "problemMatcher": [
                "$cmake",
                "$kconfig",
                "$kconfig_syntax",
                "$kconfig_syntax_files",
                "$dts",
                "$dts_syntax",
                "$gcc",
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "west flash --runner jlink",
            "problemMatcher": []
        },
        {
            "label": "menuconfig",
            "type": "shell",
            "command": "west build -t menuconfig",
            "problemMatcher": []
        },
    ],
    "inputs": [
        {
            "id": "build_options",
            "description": "Build options",
            "default": "",
            "type": "pickString",
            "options": [
                "",
                "-- -DCONFIG_APP_DEBUG=y"
            ]
        },
    ]
}
